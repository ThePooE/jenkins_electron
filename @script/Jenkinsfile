#!groovy
import groovy.json.*
import hudson.model.*

// Have to approve the JsonSlurperClassic signatue in Jenkins

@NonCPS
def jsonParse(def json) {
    new groovy.json.JsonSlurperClassic().parseText(json)
}
node {
    /** Downloading Stage */
    stage 'Download'
    checkout scm
    def mvnHome = tool 'M3'

    /** Setting-up Stage */
    stage 'Setup'
    bat 'npm run package-properties'
    def file = readFile 'package-properties.json'
    def json = jsonParse(file);
    echo file
    currentBuild.displayName = 'v' + json.version + ' - ' + json.platform + env.BUILD_ID
    bat 'npm uninstall *'

    /** Building Stage */
    stage 'Build'
    bat 'npm install'

    /** Testing Stage */
    stage 'Test'
    build job: 'jenkin_groovy_down', parameters:
        [[$class: 'StringParameterValue', name: 'MY_VAR', value: 'Hello world!', BUILD_DISPLAY_NAME: currentBuild.displayName]]
    bat 'npm run e2e'
    bat 'npm run coverage'

    /** Packaging Stage */
    stage 'Package'
    bat 'npm run packWin'
    archiveArtifacts artifacts: '**', onlyIfSuccessful: true
    deleteDir()
}